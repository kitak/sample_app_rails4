<% provide(:title, "Direct message") %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info', user: @user %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.received_messages.any? %> 
      <ol class="microposts">
        <%= render partial: 'shared/message', collection: @messages %> 
      </ol>
      <%= will_paginate @messages %>
    <% end %>
  </div>
</div>
